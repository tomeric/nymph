%h1= @gem.name
= @gem.description

- if @gem.homepage
  %p Homepage: #{link_to @gem.homepage, @gem.homepage}

- if @gem.dependencies.present?
  %h2#dependencies Dependencies
  %ul
    = render :partial => 'dependency', :collection => @gem.dependencies

- if @gem.latest.present?
  %h2#version Latest version
  %p{ :class => @gem.outdated? ? 'outdated' : nil }
    #{@gem.latest.current_version} (current: #{@gem.loaded.current_version})
    
- if @gem.rss_feeds.present?
  %h2 RSS Feeds
  - @gem.rss_feeds.each do |feed|
    Dummy

%p= link_to "&lt; Back", :back